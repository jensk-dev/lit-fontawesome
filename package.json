{
  "name": "@jensk/lit-fontawesome",
  "description": "Unofficial Lit component for Font Awesome heavily inspired by vue-fontawesome!",
  "keywords": [
    "fontawesome",
    "lit"
  ],
  "files": [
    "*"
  ],
  "license": "MIT",
  "private": false,
  "version": "0.0.8",
  "main": "index.js",
  "types": "index.d.ts",
  "homepage": "https://github.com/jensk-dev/lit-fontawesome",
  "repository": {
    "type": "git",
    "url": "https://github.com/jensk-dev/lit-fontawesome.git"
  },
  "contributors": [
    "Jens Kresse <contact@jensk.dev>"
  ],
  "browser": true,
  "scripts": {
    "build": "tsc && vite build",
    "test": "vitest",
    "cover": "vitest run --coverage",
    "e2e:open": "cypress open --e2e",
    "e2e:run": "cypress run --e2e",
    "e2e:verify": "cypress verify",
    "e2e:start": "yarn build && concurrently --raw --kill-others --success \"all\" \"yarn preview\" \"yarn e2e:open\"",
    "analyze": "lit-analyzer --strict src/**/*.ts"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6",
    "lit": "^2"
  },
  "devDependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@jensk/rollup-plugin-package-process": "0.0.3",
    "@types/jsdom": "^16.2.14",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.3",
    "concurrently": "^7.2.2",
    "cssnano": "^5.1.12",
    "cypress": "^10.2.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-lit": "^1.6.1",
    "happy-dom": "^5.3.2",
    "lit-analyzer": "2.0.0-pre.2",
    "postcss": "^8.4.14",
    "prettier": "2.7.1",
    "terser": "^5.14.1",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.0-beta.2",
    "vite-plugin-dts": "^1.2.0",
    "vitest": "^0.16.0"
  }
}
